{
  "name": "biocli-companion-desktop",
  "version": "1.0.0",
  "description": "Revolutionary desktop app: Terminal + AI sidebar for real-time bioinformatics command assistance",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "bioinformatics",
    "cli",
    "terminal",
    "ai-assistant",
    "genomics",
    "command-line"
  ],
  "author": "SonnyS10",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.biocli.companion",
    "productName": "BioCLI Companion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
